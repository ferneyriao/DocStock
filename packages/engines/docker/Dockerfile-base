FROM ubuntu:latest
ENV PATH "$PATH:./node_modules/.bin:/usr/bin:/usr/bin/:."
RUN apt update && apt install -y build-essential zip vim curl nodejs npm apt-utils supervisor git iputils-ping dnsutils nmap net-tools lsof && curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | apt-key add - && echo "deb https://dl.yarnpkg.com/debian/ stable main" | tee /etc/apt/sources.list.d/yarn.list && apt update && apt install -y yarn && npm i -g n && n latest